{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "cache/typescript",
    "paths": {
      "@": [
        "src"
      ],
      "@/*": [
        "src/*"
      ]
    }
  },
  "exclude": [
    "cache",
    "dist",
    "docs",
    "es",
    "lcov-report",
    "node_modules"
  ],
  "extends": "real-config/tsconfig/min",
  "include": [
    "*.js",
    "*.ts",
    ".eslintrc.js",
    ".eslintrc.overrides.js",
    ".eslintrc.rule-overrides.js",
    ".eslintrc.synonyms.js",
    ".eslintrc.temp.js",
    ".postcssrc.js",
    ".prettierrc.js",
    ".stylelintrc.js",
    ".stylelintrc-html.js"
  ]
}
